<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ConsumptionFragment"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="오늘의 섭취량">
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <ImageButton
                android:id="@+id/arrow_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                android:background="@color/white"
                app:tint="@color/black"
                android:rotation="90"
                android:scaleType="fitCenter"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <ImageButton
                android:id="@+id/arrow_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                android:background="@color/white"
                app:tint="@color/black"
                android:rotation="270"
                android:scaleType="fitCenter"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/searchTabColor"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_white_round"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 이만큼 먹었어요"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">
                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/text_round"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="열량"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/calorie_kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0kcal"
                        android:textColor="@color/subTextColor"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/calorie_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/text_round">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="탄수화물"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/carbohydrate_g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0g"
                        android:textColor="@color/subTextColor"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/carbohydrate_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/text_round"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="단백질"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/protein_g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0g"
                        android:textColor="@color/subTextColor"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/protein_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/text_round">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지방"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/fat_g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0g"
                        android:textColor="@color/subTextColor"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/fat_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>