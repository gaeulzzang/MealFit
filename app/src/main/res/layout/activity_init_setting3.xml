<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".InitSettingActivity3">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="당신을 위한 맞춤 설정">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영양 성분 비율을 정해주세요."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_round"
            android:elevation="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="탄수화물"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="35dp"/>
            <ImageButton
                android:id="@+id/minus1"
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:src="@drawable/remove"
                app:tint="@color/black"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp" />
            <TextView
                android:id="@+id/carbohydrate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_circle"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"/>
            <ImageButton
                android:id="@+id/plus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_input_add"
                app:tint="@color/black"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_round"
            android:elevation="4dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="단백질"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="35dp"/>
            <ImageButton
                android:id="@+id/minus2"
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:src="@drawable/remove"
                app:tint="@color/black"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"/>
            <TextView
                android:id="@+id/protein_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_circle"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"/>
            <ImageButton
                android:id="@+id/plus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_input_add"
                app:tint="@color/black"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_round"
            android:elevation="4dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="지방"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="35dp"/>
            <ImageButton
                android:id="@+id/minus3"
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:src="@drawable/remove"
                app:tint="@color/black"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginLeft="90dp"/>
            <TextView
                android:id="@+id/fat_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_circle"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"/>
            <ImageButton
                android:id="@+id/plus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_input_add"
                app:tint="@color/black"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="10dp"
            android:drawableTint="@color/subTextColor"
            android:text="권장 영양 성분 섭취 비율은"
            android:textColor="@color/subTextColor"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="160dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탄수화물 : 단백질 : 지방 = 5 : 3 : 2 예요."
            android:textColor="@color/subTextColor"
            android:textSize="15sp"
            android:layout_marginLeft="40dp"/>
        <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:text="다음"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="70dp"/>
    </LinearLayout>
</LinearLayout>